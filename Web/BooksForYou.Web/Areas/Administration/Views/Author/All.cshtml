@using BooksForYou.Web.ViewModels.Administration.Authors;
@model AuthorsListViewModel


@{
    ViewData["Title"] = "Get Authors";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Manage Authors</h3>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <p>
                        <a asp-action="Create" class="text-primary">Create new author</a>
                    </p>
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" aria-describedby="example2_info">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Genre</th>
                                        <th>Website</th>
                                        <th>Born</th>
                                        <th>Image</th>
                                        <th>Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var author in Model.Authors)
                                    {
                                        <tr>
                                            <td>
                                                @author.Name
                                            </td>
                                            <td>
                                                @{
                                                    string x = author.Description;
                                                    if (x != null && x.Length > 100)
                                                    {
                                                        x = x.Substring(0, 50);
                                                    }
                                                }
                                                @Html.Raw(x)...
                                            </td>
                                            <td>
                                                @author.Genre
                                            </td>
                                            <td>
                                                @author.Website
                                            </td>
                                            <td>
                                                @author.Born
                                            </td>
                                            <td>
                                                @author.ImageUrl
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@author.Id" class="text-warning">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@author.Id" class="text-primary">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@author.Id" class="text-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-20 col-md-10">
                            <paging page-no="@Model.PageNumber"
                                    page-size="@Model.PageSize"
                                    total-records="@Model.TotalRecords"
                                    page-size-dropdown-items="5-10-20">
                            </paging>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="showmodal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>