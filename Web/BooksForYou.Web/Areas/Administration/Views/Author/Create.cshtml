@using BooksForYou.Web.ViewModels.Administration.Authors;
@model AuthorCreateViewModel

@{
    ViewBag.Title = "Add Author";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.GenreId" class="form-label">Genre</label>
                    <select asp-for="@Model.GenreId" class="form-control">
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Website" class="form-label">Website</label>
                    <input asp-for="@Model.Website" class="form-control" aria-required="true" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Born" class="form-label">Born</label>
                    <input asp-for="@Model.Born" class="form-control" aria-required="true" />
                    <span asp-validation-for="Born" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center mb-3">
                <div class="form-group mt-3">
                    <label class="mr-2">Upload your Image:</label>
                    <input type="file" name="file">
                </div>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}