@using BooksForYou.Web.ViewModels.Administration.Genres;
@model GenreEditViewModel

@{
    ViewData["Title"] = "Edit genre";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form id="edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
                <div>
                    <a asp-action="All">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
