@using BooksForYou.Web.ViewModels.ContactUs;
@model ContactUsViewModel;

@{
    ViewData["Title"] = "Contact Us";
}

<section class="content">
    <form asp-action="ContactUs" method="post" >
        <div class="card">
            <div class="card-body row">
                <div class="col-5 text-center d-flex align-items-center justify-content-center">
                    <div class="">
                        <h2><strong>Books for You</strong></h2>
                        <p class="lead mb-5">
                            Sofia, Druzhba, bl.263 A<br>
                            Phone: +359 894346782
                        </p>
                    </div>
                </div>
                <div class="col-7">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" class="form-control">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email">E-Mail</label>
                        <input asp-for="@Model.Email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Subject">Subject</label>
                        <input asp-for="@Model.Subject" class="form-control">
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Message">Message</label>
                        <textarea asp-for="@Model.Message" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Send message">
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
@if (ViewBag.ConfirmMessage != null)
{
    <div class="alert alert-success">@ViewBag.ConfirmMessage</div>
}
