@using BooksForYou.Web.ViewModels.Publishers;
@model PublisherDetailsViewModel

@{
    ViewBag.Title = "Details of publisher";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form id="editForm" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" readonly rows="7"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </form>
        <div class="text-center mb-3">
            <a asp-action="All">Back to List</a>
        </div>
    </div>
</div>



