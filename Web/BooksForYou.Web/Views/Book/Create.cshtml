@using BooksForYou.Web.ViewModels.Books;
@model BookCreateViewModel

@{
    ViewData["Title"] = "Create Book";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.ISBN" class="form-label">ISBN</label>
                    <input asp-for="@Model.ISBN" class="form-control" aria-required="true" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.PublisherId" class="form-label">Publisher</label>
                    <select asp-for="@Model.PublisherId" class="form-control">
                        @foreach (var publisher in Model.Publishers)
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
            </div>
           <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.UserAuthorId" class="form-label">Author</label>
                    <select asp-for="@Model.UserAuthorId" class="form-control">
                        @foreach (var author in Model.UsersAuthors)
                        {
                            <option value="@author.Id">@author.FirstName @author.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="UserAuthorId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.GenreId" class="form-label">Genre</label>
                    <select asp-for="@Model.GenreId" class="form-control">
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.LanguageId" class="form-label">Language</label>
                    <select asp-for="@Model.LanguageId" class="form-control">
                        @foreach (var language in Model.Languages)
                        {
                            <option value="@language.Id">@language.Name</option>
                        }
                    </select>
                    <span asp-validation-for="LanguageId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.PublisheDate" class="form-label">Publishe Date</label>
                    <input asp-for="@Model.PublisheDate" class="form-control" value="" />
                    <span asp-validation-for="PublisheDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="text-center mb-3">
                    <label asp-for="@Model.Pages" class="form-label">Pages</label>
                    <input asp-for="@Model.Pages" class="form-control" value="" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center mb-3">
                <div class="form-group mt-3">
                    <label class="mr-2">Upload your Image:</label>
                    <input type="file" name="file">
                </div>
            </div>
            <div class="text-center mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}